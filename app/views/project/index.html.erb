<div class="container">
  <div class="center-block" id="upload-results-container">
    <% if alert %>
        <div class="alert alert-danger" role="alert">
          <% alert.each do |message| %>
              <div><%= message %></div>
          <% end %>
        </div>
    <% end %>
    <% if notice %>
        <div class="alert alert-success" role="alert">
          <%= notice %>
        </div>
    <% end %>

    <h2>Projects</h2>

    <table id="pr-table" class="table table-striped table-bordered">
      <thead>
      <tr>
        <th class="small"><%= :id %></th>
        <th class="small"><%= :project_name %></th>
        <th class="small" ></th>
      </tr>
      </thead>

      <tbody>
      <% @projects.each do |project| %>
          <tr class="project_row">
            <td class="id"><%= project.id %></td>
            <td class="project"><%= project.project_name %></td>
            <td class="actions nostrech">
              <%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe,
                          edit_project_path(project),
                          class: 'editProject' %>
              <%= link_to '<i class="glyphicon glyphicon-remove"></i>'.html_safe,
                          project,
                          class: 'destroyProject',
                          method: :delete,
                          data: {confirm: 'Deleting project will cause deleting all results attached to this project. Are you sure?'}
              %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <%= render(
            partial: 'project/new_project'
        ) %>
  </div>
</div>
