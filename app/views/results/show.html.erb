<div class="container">
  <div class="row">
    <div class="center-block" id="upload-results-container">

      <h1>Show Result</h1>

      <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd><%= @result.id %></dd>
        <dt>Project</dt>
        <dd><%= @result.project.project_name %></dd>
        <dt>Version</dt>
        <dd><%= @result.version %></dd>
        <dt>Duration</dt>
        <dd><%= @result.duration %></dd>
        <dt>RPS</dt>
        <dd><%= @result.rps %></dd>
        <dt>Profile</dt>
        <dd><%= @result.profile %></dd>
        <dt>Test run date</dt>
        <dd><%= @result.test_run_date %></dd>
        <dt>Created at</dt>
        <dd><%= @result.created_at %></dd>
        <dt>Updated at</dt>
        <dd><%= @result.updated_at %></dd>
        <dt>Time cutting percent</dt>
        <dd><%= @result.time_cutting_percent %></dd>
        <dt>Value smoothing interval</dt>
        <dd><%= @result.value_smoothing_interval %></dd>
        <dt>Release date</dt>
        <dd><%= @result.release_date.nil? ? '-' : @result.release_date %></dd>
        <dt>Requests data</dt>
        <dd><%= @result.requests_data_identifier.nil? ? 'Requests data file does not exist' : link_to('Download',  result_download_requests_data_path(@result)) %></dd>
        <dt>Performance data </dt>
        <dd><%= @result.performance_data_identifier.nil? ? 'Performance data file does not exist' : link_to('Download',  result_download_performance_data_path(@result)) %></dd>
      </dl>

      <%= link_to 'Edit', edit_result_path(@result), class: "btn btn-primary" %>
      <%= link_to 'Remove',
                  @result,
                  method: :delete,
                  class: "btn btn-danger pull-right",
                  data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
</div>