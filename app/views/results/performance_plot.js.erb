$('#<%= "#{@plot_id}_button" %>').prop('type', 'button');

var colors = ['red', 'green', 'blue', 'gray', 'orange', 'brown', 'purple', 'olive'];
var colors_dup = colors.slice();

var lines = [];
<% @result_data.each do |label, data| %>
  var label_plot = {
    x: <%= data[:seconds] %>,
    y: <%= data[:values] %>,
    name: '<%= "#{label} (id:#{params[:result_id]})" %>',
    mode: 'lines',
    line: {
      color: colors_dup.shift()
    }
  };
  lines.push(label_plot);
<% end %>

var layout = {
  title: '<%= @group_name %>',
  xaxis: {
      title: 'Time, seconds'
  },
  yaxis: {
      title: 'Metrics, <%= @unit %>'
  }
};
Plotly.newPlot('<%= "#{@plot_id}_div" %>', lines, layout);
